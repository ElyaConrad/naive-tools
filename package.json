{
  "name": "naive-tools",
  "version": "0.1.7",
  "description": "",
  "scripts": {
    "serve": "npm link && npm-watch build:dev",
    "build:dev": "vite build -c vite.config.ts",
    "build": "vue-tsc --project tsconfig.json && vite build -c vite.config.ts && tsc --project tsconfig.json",
    "lint": "eslint src --ext .ts,.vue",
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./lib/naive-mobile.es.js",
      "require": "./lib/naive-mobile.umd.js"
    },
    "./style.css": "./lib/style.css"
  },
  "files": [
    "lib",
    "README.md",
    "package.json"
  ],
  "watch": {
    "build:dev": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,scss,vue",
      "quiet": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/test-utils": "^2.0.0-rc.20",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^8.6.0",
    "jest": "^27.5.1",
    "npm-watch": "^0.11.0",
    "sass": "^1.49.9",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8"
  },
  "peerDependencies": {
    "naive-ui": "^2.28.0"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "colors-convert": "^1.4.1"
  }
}
